{
    "name": "GROOVE",
    "version": "1.0",
    "description": "Lightweight extension to show the eco footprint of online retailers",
    "permissions": [
        "activeTab", 
        "declarativeContent", 
        "storage", 
        "tabs",
        "<all_urls>"
    ],
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistant": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/groove-16.png",
            "32": "images/groove-32.png",
            "48": "images/groove-48.png",
            "128": "images/groove-128.png"
        }
    },
    "icons": {
        "16": "images/groove-16.png",
        "32": "images/groove-32.png",
        "48": "images/groove-48.png",
        "128": "images/groove-128.png"
    },
    "manifest_version": 2
}